<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_portfolio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ojeda.diego.myresume.portfolio.MainPortfolioActivity">

    <ProgressBar
        android:id="@+id/activity_main_portfolio_projects_progress_bar"
        android:indeterminate="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/activity_main_portfolio_projects_rv"
        app:layoutManager="android.support.v7.widget.StaggeredGridLayoutManager"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>
